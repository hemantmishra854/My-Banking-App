<resources xmlns:tools="http://schemas.android.com/tools">

  <!-- Base application theme. -->
  <style name="Theme.Banking" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="android:textColorPrimary">@color/textColorPrimary</item>
    <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="Widget.Banking.Toolbar" parent="Widget.AppCompat.Toolbar">
    <item name="android:background">?attr/colorAccent</item>
    <item name="android:theme">@style/Theme.Banking</item>
    <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    <item name="titleTextAppearance">@style/TextAppearance.Banking.Toolbar</item>
  </style>
  <style name="TextAppearance.Banking.Toolbar" parent="TextAppearance.MaterialComponents.Button">
    <item name="android:textSize">16sp</item>
  </style>
  <style name="Widget.Banking.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    <item name="hintTextAppearance">@style/TextAppearance.Banking.TextInputLayout.HintText</item>
    <item name="hintTextColor">@color/textColorPrimary</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="boxStrokeColor">@color/textInputOutlineColor</item>
  </style>

  <style name="TextAppearance.Banking.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
    <item name="android:textColor">?android:attr/textColorPrimary</item>
  </style>
  <style name="Widget.Banking.Button" parent="Widget.MaterialComponents.Button">
    <item name="android:textColor">?android:attr/textColorPrimary</item>
    <item name="backgroundTint">?attr/colorPrimaryDark</item>
  </style>
  <style name="Widget.Banking.Backdrop" parent="">
    <item name="android:background">?attr/colorAccent</item>
  </style>
  <style name="Widget.Banking.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
    <item name="android:textColor">?android:attr/textColorPrimary</item>
  </style>
  <style name="TextAppearance.Banking.Title" parent="TextAppearance.MaterialComponents.Headline4">
    <item name="textAllCaps">true</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">?android:attr/textColorPrimary</item>
  </style>

</resources>
